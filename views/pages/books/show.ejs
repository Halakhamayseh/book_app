    <button id="updateBut">Update</button>
    <section id="updateForm">
<form action="/books/<%=objectId.id%>?_method=put" method="POST">
    <input type="text" name="title" placeholder="Populated Title" value="<%= objectId.title%>"><br>
    <input type="text" name="author" placeholder="Populated Author" value="<%= objectId.author%>"><br>
    <input type="text" name="isbn" placeholder="Populated ISBN"><br>
    <input type="text" name="image_url" placeholder="Populated Image_url" value="<%= objectId.image_url%>"><br>
    <textarea name="description" id="" cols="30" rows="10" placeholder="Populated Description" ><%= objectId.description%></textarea><br>
    <select name="bookshelf" aria-placeholder="select bookshelf" id="">
        <option value=""></option>
    </select><br>
    <button type="submit">Update Book</button>
</form>
    </section>
